{

  "manifest_version": 2,
  "name": "Siliconic",
  "version": "1.0",

  "description": "Adds styling adjustments to any webpages matching siliconera.com.",

  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "icons": {
    "48": "icons/videogame-48.png",
    "96": "icons/videogame-96.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/videogame-48.png",
    "default_title": "Iconic"
  }

}